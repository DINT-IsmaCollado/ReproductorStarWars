<Window x:Class="ReproductorStarWars.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReproductorStarWars"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="icono.ico">
    <DockPanel>
        <StackPanel DockPanel.Dock="Right">
            <StackPanel Orientation="Vertical">
                <Button Width="100" Margin="10,10,10,2">Play</Button>
                <Button Width="100" Margin="10,10,10,2">Pause</Button>
                <Button Width="100" Margin="10,10,10,2">Stop</Button>
            </StackPanel>
            <StackPanel>
                <RadioButton Content="Trailer 1"/>
                <RadioButton Content="Trailer 2"/>
            </StackPanel>
        </StackPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <CheckBox Margin="4">Silencio</CheckBox>
        </StackPanel>
        <Border Margin="10" BorderBrush="Black" BorderThickness="1">
            <MediaElement DockPanel.Dock="Left" ></MediaElement>
        </Border>
        
    </DockPanel>
</Window>
